{
  "host": "localhost",
  "port": 9200,
  "index": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "analysis": {
        "filter": {
          "asciifolding_custom": {
            "type": "asciifolding",
            "preserve_original": true
          },
          "czech_stop": {
            "type": "stop",
            "stopwords": "_czech_"
          },
          "czech_stemmer": {
            "type": "stemmer",
            "language": "czech"
          },
          "english_stop": {
            "type": "stop",
            "stopwords": "_english_"
          },
          "english_stemmer": {
            "type": "stemmer",
            "language": "english"
          }
        },
        "analyzer": {
          "czech_value": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "czech_stop",
              "lowercase",
              "czech_stemmer",
              "asciifolding_custom"
            ]
          },
          "english_value": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "english_stop",
              "lowercase",
              "english_stemmer",
              "asciifolding_custom"
            ]
          },
          "czech_lemmatized": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "czech_stop",
              "lowercase",
              "asciifolding_custom"
            ]
          },
          "english_lemmatized": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "english_stop",
              "lowercase",
              "asciifolding_custom"
            ]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "filename": {
          "type": "text"
        },
        "path": {
          "type": "text"
        },
        "format": {
          "type": "keyword"
        },
        "plaintext": {
          "type": "text"
        },
        "language": {
          "type": "keyword"
        },
        "author": {
          "type": "text"
        },
        "timestamp": {
          "type": "date"
        },
        "entities": {
          "type": "nested",
          "properties": {
            "entity_type": {
              "type": "keyword"
            },
            "value": {
              "type": "text",
              "analyzer": "czech_value",
              "fields": {
                "english": {
                  "type": "text",
                  "analyzer": "english_value"
                },
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "lemmatized": {
              "type": "text",
              "analyzer": "czech_lemmatized",
              "fields": {
                "english": {
                  "type": "text",
                  "analyzer": "english_lemmatized"
                },
                "keyword": {
                  "type": "keyword"
                }
              }
            },
            "context": {
              "type": "text"
            },
            "file_id": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
