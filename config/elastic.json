{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "analysis": {
      "filter": {
        "asciifolding_custom": {
          "type": "asciifolding",
          "preserve_original": true
        }
      },
      "analyzer": {
        "custom_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding_custom"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "filename": {
        "type": "text"
      },
      "path": {
        "type": "text"
      },
      "format": {
        "type": "keyword"
      },
      "plaintext": {
        "type": "text",
        "analyzer": "custom_analyzer"
      },
      "language": {
        "type": "keyword"
      },
      "author": {
        "type": "text"
      },
      "timestamp": {
        "type": "date"
      },
      "entities": {
        "type": "join",
        "relations": {
          "file": "entity"
        }
      },
      "entity_type": {
        "type": "keyword"
      },
      "value": {
        "type": "text",
        "analyzer": "custom_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "lemmatized": {
        "type": "text",
        "analyzer": "custom_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "context": {
        "type": "text"
      }
    }
  }
}
